<ul>
  <% if flash[:error] %>
  <% flash[:error].each do |error| %>
  <li><%= error %> </li>
  <% end %>
  <% end %>

</ul>

<%= form_for @comment do |f| %>
<%= f.label :content %>
<%= f.text_field :content %>


<%= f.collection_select :user_id, @users, :id, :username %>
<%= f.collection_select :bathroom_id, @bathrooms, :id, :name %>

<%= f.submit %>

<% end %>
