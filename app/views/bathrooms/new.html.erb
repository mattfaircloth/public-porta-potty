<%= form_for @bathroom do |f| %>
<%= f.label :name %>
<%= f.text_field :name, placeholder: "Name of Bathroom" %>

<%= f.label :cleanliness %>
<%= f.text_field :cleanliness, placeholder: "Rate from 1-10" %>

<%= f.collection_check_boxes :location_ids, @locations, :id, :neighborhood %>
<%= f.submit %>

<% end %>
